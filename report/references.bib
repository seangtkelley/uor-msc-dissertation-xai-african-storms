  doi       = {10.1038/s43017-023-00397-x},
  issn      = {2662-138X},
  issue     = {4},
  journal   = {Nature Reviews Earth \& Environment 2023 4:4},
  keywords  = {Atmospheric dynamics,Carbon cycle,Climate,Climate and Earth system modelling,change impacts},

  issue     = {11},
  journal   = {Environmental Research Letters},
  keywords  = {circulation classification,large-scale synoptics,precipitation,regional climate modeling,thermodynamics,weather atlas},
  month     = {11},
  pages     = {114011},
  publisher = {IOP Publishing},
  title     = {Drivers of future changes in East African precipitation},

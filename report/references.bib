  journal   = {Proceedings of the 31st ACM SIGKDD Conference on Knowledge Discovery and Data Mining V.2 (KDD '25), August 3â•ﬁ7, 2025, Toronto, ON, Canada},
  keywords  = {Learning,Parameterization,Physics,Prediction,Weather},

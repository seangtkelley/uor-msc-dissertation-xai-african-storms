  journal   = {Lecture Notes in Computer Science (including subseries Lecture Notes in Artificial Intelligence and Lecture Notes in Bioinformatics)},
  keywords  = {Black box models,Climate science,Geoscience,Meteorology,Neural Networks (NNs),Trust,eXplainable Artificial Intelligence (XAI)},
  pages     = {315-339},
  publisher = {Springer Science and Business Media Deutschland GmbH},
  title     = {Explainable Artificial Intelligence in Meteorology and Climate Science: Model Fine-Tuning, Calibrating Trust and Learning New Science},
  volume    = {13200 LNAI},
  url       = {https://link.springer.com/chapter/10.1007/978-3-031-04083-2_16},

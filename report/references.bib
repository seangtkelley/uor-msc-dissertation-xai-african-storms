  pages     = {134109},
  publisher = {American Physical Society},
  title     = {Identifying quantum phase transitions with adversarial neural networks},
  volume    = {97},
  url       = {https://journals.aps.org/prb/abstract/10.1103/PhysRevB.97.134109},
  year      = {2018}
